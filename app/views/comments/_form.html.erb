<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <div class="form-group row">
    <div class="col-md-12">
      <%= form.label :commenter, :class => 'control-label ' %>
    </div>
    <div class="col-md-12" >
      <%= form.text_field :commenter, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-md-12">
      <%= form.label :body, :class => 'control-label' %>
    </div>
    <div class="col-md-12" >
      <%= form.text_area :body, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-12 padtopbot-15">
      <%= form.submit(nil, :class => 'btn btn-primary', :id => 'submit-button') %>
    </div>
  </div>

<% end %>
