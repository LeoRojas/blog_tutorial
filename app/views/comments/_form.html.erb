<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :commenter, :class => 'control-label col-xs-2' %><br>
    <div class="col-lg-10" style="width:60%;" >
      <%= form.text_field :commenter, :class => 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label :body, :class => 'control-label col-xs-2' %><br>
    <div class="col-lg-10" style="width:60%;" >
      <%= form.text_area :body, :class => 'form-control' %>
    </div>
  </>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= form.submit(nil, :class => 'btn btn-primary', :id => 'submit-button') %>
    </div>
  </div>

<% end %>
